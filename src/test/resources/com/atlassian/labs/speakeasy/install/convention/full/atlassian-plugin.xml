<atlassian-plugin key="myextension" name="My Extension" plugins-version="2">
    <plugin-info>
        <description>My simple extension that does wonderful things</description>
        <version>1</version>
        <vendor name="Joe Citizen" url="http://example.com/extension-homepage.html" />
    </plugin-info>

    <scoped-web-resource key="images" scan="/images" />

    <scoped-web-resource key="css" scan="/css" />

    <scoped-modules key="modules" location="js">
        <dependency>css</dependency>
    </scoped-modules>
</atlassian-plugin>